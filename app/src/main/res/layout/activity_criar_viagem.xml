<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.CriarViagemActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="#005F9E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Criar nova viagem"
                android:textColor="#005F9E"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivLogo" />

            <TextView
                android:id="@+id/lblDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Nome da viagem"
                android:textColor="#333333"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

            <EditText
                android:id="@+id/etNomeViagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: FÃ©rias em Paris"
                android:inputType="textCapWords"
                app:layout_constraintTop_toBottomOf="@id/lblDestino" />

            <TextView
                android:id="@+id/lblDataInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Data de partida"
                android:textColor="#333333"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etNomeViagem" />

            <EditText
                android:id="@+id/etDataInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="DD/MM/AAAA"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"
                app:layout_constraintEnd_toStartOf="@+id/ivCalendarInicio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblDataInicio" />

            <ImageView
                android:id="@+id/ivCalendarInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:padding="8dp"
                app:tint="#555555"
                app:layout_constraintBottom_toBottomOf="@id/etDataInicio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/etDataInicio" />

            <TextView
                android:id="@+id/lblDataFim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Data de chegada"
                android:textColor="#333333"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etDataInicio" />

            <EditText
                android:id="@+id/etDataFim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="DD/MM/AAAA"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"
                app:layout_constraintEnd_toStartOf="@+id/ivCalendarFim"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblDataFim" />

            <ImageView
                android:id="@+id/ivCalendarFim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:padding="8dp"
                app:tint="#555555"
                app:layout_constraintBottom_toBottomOf="@id/etDataFim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/etDataFim" />

            <TextView
                android:id="@+id/lblTransportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Adicionar Transporte"
                android:textColor="#005F9E"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etDataFim" />

            <Spinner
                android:id="@+id/spTransporteTipo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:entries="@array/array_tipos_transporte"
                app:layout_constraintTop_toBottomOf="@+id/lblTransportes" />

            <LinearLayout
                android:id="@+id/layoutRota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/spTransporteTipo">

                <EditText
                    android:id="@+id/etTransporteOrigem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="De: (Ex: Lisboa)" />

                <EditText
                    android:id="@+id/etTransporteDestino"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="Para: (Ex: Paris)" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCriar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="CRIAR VIAGEM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#005F9E"
                app:layout_constraintTop_toBottomOf="@+id/layoutRota"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:elevation="8dp"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>