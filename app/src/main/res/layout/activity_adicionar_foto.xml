<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/headerAzul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0099ff"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova Memória"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regista os melhores momentos."
            android:textColor="#E0E0E0"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerAzul"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <TextView
                android:text="A tua foto"
                android:textColor="#0099ff"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/ivPreviewFoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="#BDBDBD"
                    android:padding="80dp"/>
            </FrameLayout>

            <Button
                android:id="@+id/btnTirarFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tirar Nova Foto"
                android:drawableStart="@android:drawable/ic_menu_camera"
                android:drawableTint="@android:color/white"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>
            <TextView
                android:text="Descrição / Memória"
                android:textColor="#0099ff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etComentarioFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escreve algo sobre este momento..."
                android:inputType="textMultiLine"
                android:lines="3"
                android:gravity="top|start"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnGuardarMemoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar na Galeria"
                android:backgroundTint="#0099ff"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>