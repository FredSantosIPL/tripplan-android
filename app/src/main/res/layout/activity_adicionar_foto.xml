<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTituloPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Memória"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_title"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloPagina">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_camera"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:padding="50dp"/> </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSelecionarFoto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ESCOLHER DA GALERIA"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:background="@drawable/bg_input_border"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:text="Descrição / Legenda"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDescricao"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Ex: Jantar na Torre Eiffel..."
            android:inputType="textMultiLine|textCapSentences"
            android:gravity="top|start"
            android:background="@drawable/bg_input_border"
            android:padding="16dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuardarFoto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="GUARDAR MEMÓRIA"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_botao_gradiente"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>