<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTituloPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Atividade"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_title"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloPagina">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etNomeAtividade"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nome (Ex: Visita ao Museu)"
            android:inputType="textCapSentences"
            android:background="@drawable/bg_input_border"
            android:paddingStart="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etTipoAtividade"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Tipo (Ex: Cultura, Lazer, Jantar)"
            android:inputType="textCapWords"
            android:background="@drawable/bg_input_border"
            android:paddingStart="16dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ADICIONAR ATIVIDADE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_botao_gradiente"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>