<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTituloPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo Transporte"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_title"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloPagina">

        <TextView
            android:text="Tipo"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spTipoTransporte"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_input_border"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"/>

        <EditText
            android:id="@+id/etOrigem"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Origem (Ex: Lisboa)"
            android:inputType="textCapWords"
            android:background="@drawable/bg_input_border"
            android:paddingStart="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etDestino"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Destino (Ex: Londres)"
            android:inputType="textCapWords"
            android:background="@drawable/bg_input_border"
            android:paddingStart="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="Data de Partida"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDataPartida"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="DD/MM/AAAA"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:background="@drawable/bg_input_border"
            android:paddingStart="16dp"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:drawableTint="@color/primary_blue"
            android:paddingEnd="16dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuardarTransporte"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="GUARDAR TRANSPORTE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_botao_gradiente"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>