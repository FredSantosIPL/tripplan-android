<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/headerAzul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0099ff"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Transporte"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como vais viajar?"
            android:textColor="#E0E0E0"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerAzul"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="24dp"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <TextView
                android:text="Tipo de Transporte"
                android:textColor="#0099ff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spTipoTransporte"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown"/>

            <TextView
                android:text="Origem"
                android:textColor="#0099ff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etOrigem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="De onde sais?"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:text="Destino"
                android:textColor="#0099ff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Para onde vais?"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:text="Data de Partida"
                android:textColor="#0099ff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etDataPartida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Toque para selecionar data"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:drawableTint="#0099ff"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnGuardarTransporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Transporte"
                android:backgroundTint="#0099ff"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>